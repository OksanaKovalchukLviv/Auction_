@model Auction.WEB.Models.BalanceViewModel
@{
    ViewBag.Title = "Balance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Balance</h2>
<div>
    This is the amount of money in your account :  @Model.Balance
</div>

@using (Html.BeginForm("Balance", "User", FormMethod.Post))
{
    <div class="form-horizontal">
        <input type="hidden" id="UserId" name="UserId" value=@Model.UserId>
        <div class="form-group">
            @Html.LabelFor(model => model.AddMoney, "Put your money", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.AddMoney, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Put" class="btn btn-default" />
            </div>
        </div>
    </div>
}
