<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Auction</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Auction", "AllLots", "Lot", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            @if (Request.Cookies["UserId"] == null)
            {
                <div class="navbar-collapse collapse" style="float:right">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Register", "Register", "User")</li>
                        <li>@Html.ActionLink("Log In", "Login", "Auth")</li>
                    </ul>
                </div>
            }
            else
            {
                <div class="navbar-collapse collapse" style="float:left">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("New lot", "NewLot", "Lot")</li>
                        <li>@Html.ActionLink("My lots", "LotsOfUser", "Lot")</li>
                        <li>@Html.ActionLink("Lots for bids", "LotsForBids", "Lot")</li>
                    </ul>
                </div>
                <div class="navbar-collapse collapse" style="float:right">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Balance", "Balance", "User")</li>
                        <li style="color:white; width: 250px">@Html.Label("Email", Request.Cookies["Email"].Value)</li>
                        <li>@Html.ActionLink("Log Out", "Logout", "Auth")</li>
                    </ul>
                </div>
                
            }
            </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <br>
        <hr style="border: 1px solid black;">
        <footer>
            <p>&copy; @DateTime.Now.Year - Auction</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
